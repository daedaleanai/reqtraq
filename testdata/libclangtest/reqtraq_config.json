{
    "repoName": "libclangtest",
    "commonAttributes": [
        {
            "name": "Rationale",
            "required": "any"
        },
        {
            "name": "Verification",
            "value": "(Demonstration|Unit [Tt]est|[Tt]est)"
        },
        {
            "name": "Safety impact"
        }
    ],
    "documents": [
        {
            "path": "TEST-100-ORD.md",
            "prefix": "TEST",
            "level": "SYS"
        },
        {
            "path": "TEST-137-SRD.md",
            "prefix": "TEST",
            "level": "SWH",
            "parent": {
                "prefix": "TEST",
                "level": "SYS"
            }
        },
        {
            "path": "TEST-138-SDD.md",
            "prefix": "TEST",
            "level": "SWL",
            "parent": {
                "prefix": "TEST",
                "level": "SWH"
            },
            "implementation": [
                {
                    "code": {
                        "paths": ["code"],
                        "matchingPattern": ".*\\.(cc|hh)$",
                        "ignoredPatterns": [".*_ignored\\.(cc|hh)$"]
                    },
                    "tests": {
                        "paths": ["test"],
                        "matchingPattern": ".*_test\\.(cc|hh)$"
                    },
                    "codeParser": "clang",
                    "compilationDatabase": "compile_commands.json",
                    "compilerArguments": [
                        "-std=c++20",
                        "-Icode/include"
                    ]
                }
            ]
        }
    ]
}
